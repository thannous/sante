<resources>

    <style name="dashboard">
        <item name="android:numColumns">2</item>
    </style>
 	<style name="Widget">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="Widget.Text">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">7dp</item>
    </style>
    
    

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Sante.Theme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/Sante.ActionBar</item>
    </style>

    <style name="Sante.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#F7FBFC</item>
        <item name="android:titleTextStyle">@style/Sante.Action.TextStyle</item>
        <!--<item name="android:actionBarTabStyle">Sante.ActionBar.TabStyle</item>-->
    </style>

    <style name="Sante.Action.TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#1CA89F</item>
        <item name="android:textSize">25dp</item>
    </style>

    <!--<style name="Sante.ActionBar.TabStyle" parent="@android:style/Widget.Holo.Light.ActionBarView_TabView">-->
        <!--<item name="android:actionBarTabTextStyle">@style/Sante.Action.TextStyle</item>-->
    <!--</style>-->
</resources>
