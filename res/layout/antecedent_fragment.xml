<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    style="@style/Sante.ListItemStyle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="01/01/1975"
                        android:textColor="@color/text2Header"
                        android:id="@+id/textView2"
                        android:layout_gravity="left|top"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Hypertension artérielle"
                        android:textColor="@color/textHeader"
                        android:id="@+id/textView"
                        android:layout_gravity="left|center_vertical"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    style="@style/Sante.ListItemStyle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/frameLayout">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="01/01/1975"
                        android:textColor="@color/text2Header"
                        android:id="@+id/textView6"
                        android:layout_gravity="left|top"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Hypercholostrérolémie"
                        android:textColor="@color/textHeader"
                        android:id="@+id/textView3"
                        android:layout_gravity="left|center_vertical"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    style="@style/Sante.ListItemStyle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/frameLayout2">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Diabète de type 2"
                        android:textColor="@color/textHeader"
                        android:id="@+id/textView4"
                        android:layout_gravity="left|center_vertical"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    style="@style/Sante.ListItemStyle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/frameLayout3">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="01/01/1975"
                        android:textColor="@color/text2Header"
                        android:id="@+id/textView5"
                        android:layout_gravity="left|top"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Opération appendicite"
                        android:textColor="@color/textHeader"
                        android:id="@+id/textView7"
                        android:layout_gravity="left|center_vertical"/>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>